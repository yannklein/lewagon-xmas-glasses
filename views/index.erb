<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta http-equiv="content-language" content="en-EN" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <meta property="og:url" content="https://yannklein.github.io/lewagon-xmas-glasses/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Le Wagon Tokyo - Xmas glasses" />
    <meta property="og:description" content="Put on your glasses, celebrate Xmas with Le Wagon 🎅" />
    <meta class="capture-meta" property="og:image" content="/images/sample.png" />
    <link rel="shortcut icon" type="image/png" href="/images/logo_small.png"/>

    <title>Le Wagon Tokyo - Xmas glasses</title>
    <link rel="stylesheet" href="/style.css">

    <!-- INCLUDE JEELIZ FACEFILTER SCRIPT -->
    <script src="/scripts/lib/jeelizFaceFilter.js"></script>

    <!-- INCLUDE THREE.JS -->
    <script src="/scripts/lib/three.min.js"></script>

    <!-- INCLUDE JEELIZRESIZER -->
    <script src="/scripts/lib/jeelizResizer.js"></script>

    <!-- INCLUDE JEELIZ THREE.JS HELPER -->
    <script src="/scripts/lib/jeelizThreeHelper.js"></script>

    <!-- INCLUDE THREEJS LIBS AND GEOMETRY SCRIPTS -->
    <script src="https://rawcdn.githack.com/mrdoob/three.js/r106/examples/js/loaders/GLTFLoader.js"></script>
  </head>

  <body onload="main()">
    <div class="container">
      <a class="title-link" href="/">
        <div class="title">
          <img src="/images/logo.png" alt="">
          <h1>Put on your glasses, celebrate Xmas with Le Wagon 🎅</h1>
        </div>
      </a>
      <div class="ar-canvas-container">
        <canvas class="ar-canvas" id='jeeFaceFilterCanvas'>
        </canvas>
        <div class="filter-selector">
          <a class="filter-btn filter-hat active" href="#">🎁</a>
          <a class="filter-btn filter-beard" href="#">🎄</a>
        </div>
      </div>
      <a href="#" class="capture-btn">📸</a>
      <form class="selfieForm" action="/selfie" method="post">
        <input class="selfieImg" type="text" name="image">
      </form>
      <p class="footer">
        More AR and other projects on
        <a href="https://www.yannklein.me">
          Yann Klein's portfolio
        </a>
      </p>
      <a class="png-attrib" href='https://pngtree.com/so/christmas-hat'>Christmas hat png from pngtree.com</a>
    </div>
    <script src="/scripts/main.js"></script>
    <script src="/scripts/three-circle.js"></script>
    <script src="/scripts/three-gltf.js"></script>
    <script src="/scripts/three-plane.js"></script>
  </body>
</html>

